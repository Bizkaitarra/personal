{% if failedQuestions|length > 0 or correctQuestions|length > 0 %}
<div class="row mt-5">
    <div class="col-1 col-lg-3"></div>
    <div class="col-10 col-lg-6 answer_area  ">
        <div class="row">
            <a class="mb-3 btn btn-success" data-toggle="collapse" href="#historic" role="button" aria-expanded="false" aria-controls="historic">
                Ver historico
            </a>
        </div>
    </div>
    <div class="col-1 col-lg-3"></div>
</div>

<div id="historic" class="collapse">
    {% if failedQuestions|length > 0 %}
    <div class="row">
        <div class="col-1 col-lg-3"></div>
        <div class="col-10 col-lg-6">
            <div class="row">
                <div class="mb-3 " id="failedQuestions" role="alert">
                    <h2>Preguntas falladas</h2>
                    {% for failedQuestion in failedQuestions %}
                        {% include 'quiz_question_history.html.twig' with {'historicQuestion': failedQuestion, 'failed': true} %}
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="col-1 col-lg-3"></div>
    </div>
    {% endif %}
    {% if correctQuestions|length > 0 %}
    <div class="row">
        <div class="col-1 col-lg-3"></div>
        <div class="col-10 col-lg-6">
            <div class="row">
                <div class="mb-3 " id="correctQuestions" role="alert">
                    <h2>Preguntas acertadas</h2>
                    {% for correctQuestion in correctQuestions %}
                        {% include 'quiz_question_history.html.twig' with {'historicQuestion': correctQuestion, 'failed': false} %}
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="col-1 col-lg-3"></div>
    </div>
    {% endif %}
</div>

{% endif %}