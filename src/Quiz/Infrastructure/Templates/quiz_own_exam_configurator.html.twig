{% extends 'quiz_base.html.twig' %}

{% block styles %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
{% endblock %}

{% block body %}
    <h1>Configura tu exámen aleatorio</h1>
    <form method="POST">
        {% for i in 0..6 %}
            <div class="row">
            <div class="col-3 form-group">
                <label for="exam{{ i }}">Examen</label>
                <select  class="form-control" name="exam[]" id="exam{{ i }}">
                    <option value="" selected="selected">--</option>
                    {% for exam in exams %}
                        <option value="{{ exam.id }}">{{ exam }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-3 form-group">
                <label for="questionNumber">Número de preguntas</label>
                <input id="questionNumber{{ i }}" class="form-control" type="number" name="questionNumber[]" value="0">
            </div>
        </div>
        {% endfor %}
        <input class="bnt btn-success" type="submit" value="Crear examen">
    </form>
{% endblock %}

{% block javascript %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
{% endblock %}